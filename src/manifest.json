{
  "manifest_version": 3,
  "name": "Tweet Toilet",
  "version": "1.0.0",
  "description": "A Chrome extension for managing tweets with Supabase",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.twitter.com/*",
    "https://*.supabase.co/*",
    "https://fonts.googleapis.com/*",
    "https://fonts.gstatic.com/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Ctrl+Shift+S"
      },
      "description": "Open Tweet Toilet"
    }
  }
} 